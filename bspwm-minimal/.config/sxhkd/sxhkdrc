#
# bspwm hotkeys
#

ctrl + alt + Escape
    bspc quit && pkill lemonbar

ctrl + alt + w
    bspc window --close

ctrl + alt + b
    bspc desktop --balance

ctrl + alt + apostrophe
    bspc window --swap last

super + {o,i}
    bspc control --record-history off; \
    bspc window {older,newer} -f; \
    bspc control --record-history on

ctrl + alt + {_,s + }{h,j,k,l}
    bspc window --{focus,swap} {left,down,up,right}

ctrl + alt + {comma,period}
    bspc desktop --circulate {backward,forward}

super + ctrl + {h,j,k,l}
    bspc window --presel {left,down,up,right}

ctrl + alt + space
    bspc window --presel cancel

ctrl + alt + {1-9}
    bspc window --ratio 0.{1-9}

~button1
    bspc pointer --grab focus

#
# wm independent hotkeys
#

ctrl + shift + t
    termite

ctrl + shift + b
    google-chrome-stable

alt + space
    dmenu_run_tweaked

# make sxhkd reload its configuration files:
ctrl + F1
    pkill -USR1 -x sxhkd
