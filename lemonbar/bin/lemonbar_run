#! /usr/bin/zsh

## colors ##
source lemonbar_colors
source lemonbar_icons

LEMONBAR_FG='white'
LEMONBAR_BG='black'

lemonbar_data | lemonbar_format | lemonbar -p \
       -g 'x33' -u 3 \
       -f "Source Sans Pro:size=11:style=bold" -f "FontAwesome:size=12" \
       -B "$LEMONBAR_BG" -F "$LEMONBAR_FG" \
       | zsh &
