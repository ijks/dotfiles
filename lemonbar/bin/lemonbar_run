#! /usr/bin/zsh

source lemonbar_colors

LEMONBAR_FG="$blue"
LEMONBAR_BG="$white"

LEMONBAR_H=$1
LEMONBAR_U=3

LEMONBAR_FONT="Source Sans Pro:size=11:style=bold"
LEMONBAR_ICO="FontAwesome:size=12"

lemonbar_data | lemonbar_format | lemonbar -p \
       -g "x$LEMONBAR_H" -u $LEMONBAR_U \
       -f "$LEMONBAR_FONT" -f "$LEMONBAR_ICO" \
       -B "$LEMONBAR_BG" -F "$LEMONBAR_FG" \
       | zsh &
