#!/usr/bin/zsh

function _get_xres_color {
    xrdb -query | grep "\*.color$1:" | cut -f2
}

black=$(_get_xres_color 0)
dark_grey=$(_get_xres_color 8)

red=$(_get_xres_color 1)
red_bright=$(_get_xres_color 9)

green=$(_get_xres_color 2)
green_bright=$(_get_xres_color 10)

yellow=$(_get_xres_color 3)
yellow_bright=$(_get_xres_color 11)

blue=$(_get_xres_color 4)
blue_bright=$(_get_xres_color 12)

magenta=$(_get_xres_color 5)
magenta_bright=$(_get_xres_color 13)

cyan=$(_get_xres_color 6)
cyan_bright=$(_get_xres_color 14)

grey=$(_get_xres_color 7)
white=$(_get_xres_color 15)

# ugh i should've looked if there was a better way to do this.
# oh well, done is done.
