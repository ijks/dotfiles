[user]
    name = Daan Rijks
    email = daanrijks@gmail.com

[core]
    autocrlf = input
    safecrlf = warn
    askpass = 

[credential]
    helper = cache --timeout=1800

[color]
    ui = auto

[alias]
    ps = push
    pl = pull --rebase
    co = checkout
    c = commit
    st = status
    a = add
    ap = add -p

    graph = log --graph --abbrev-commit --decorate \
        --format=format:'%C(bold blue)%h%C(reset) - %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    lgraph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%ad%C(reset) %C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --date='format:%y/%-m/%-d %H:%M'
    pull-sub = !git pull --recurse-submodules && git submodule update --recursive

[push]
    default = simple

[diff]
    algorithm = histogram

[rebase]
    autosquash = true

[tig]
    main-view-author = abbreviated
    main-view-date = relative-compact

[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
